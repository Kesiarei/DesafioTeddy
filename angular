import { Component } from '@angular/core';
import { HttpClient } from '@angular/common/http';

@Component({
  selector: 'app-email-temporario',
  templateUrl: './email-temporario.component.html',
  styleUrls: ['./email-temporario.component.css']
})
export class EmailTemporarioComponent {
  temporaryEmail: string;

  constructor(private http: HttpClient) { }

  gerarEmailTemporario() {
    this.http.get<any>('https://api.example.com/generate-temp-email').subscribe(
      response => {
        this.temporaryEmail = response.email;
      },
      error => {
        console.error('Erro ao gerar o e-mail tempor√°rio', error);
      }
    );
  }
}